{
    // Python related configuration
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.wordBasedSuggestions": "off",
        "editor.rulers": [
            88,
            120
        ],
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
            "source.organizeImports": "always"
        }
    },
    "pylint.args": [
        "--disable=C0116",
        "--disable=C0111",
        "--disable=C0114"
    ],
    // editor related configuration
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "Monaspace Neon Var, Fira Code, Monaco, monospace",
    "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",
    "editor.fontVariations": "'wght' 350",
    "editor.formatOnPaste": true,
    "editor.formatOnSaveMode": "file",
    "editor.formatOnSave": true,
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    "editor.minimap.enabled": false,
    "editor.quickSuggestionsDelay": 0,
    "editor.snippetSuggestions": "top",
    "editor.suggestSelection": "first",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "storage,entity,variable",
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },
    // explorer configurations
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 1,
    // files configuration
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
    },
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    // copilot configuration
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    // search configuration
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.gitignore": true,
        "**/.pyc": true,
        "**/.svn": true,
        "**/CVS": true,
    },
    //security configuration
    "security.workspace.trust.untrustedFiles": "open",
    // terminal configuration
    "terminal.integrated.defaultProfile.windows": "Custom Init",
    "terminal.integrated.fontFamily": "FiraCode Nerd Font",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.profiles.windows": {
        "Custom Init": {
            "args": [
                "-noexit",
                "-file",
                "C:/Users/Francho/Documents/WindowsPowerShell/Microsoft.PowerShell_profile.ps1"
            ],
            "path": "pwsh.exe"
        }
    },
    //workbench config
    "window.zoomLevel": 1,
    "workbench.activityBar.location": "top",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#ab307e",
        "activityBar.background": "#ab307e",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#25320e",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#ab307e",
        "statusBar.background": "#832561",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#ab307e",
        "statusBarItem.remoteBackground": "#832561",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#832561",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#83256199",
        "titleBar.inactiveForeground": "#e7e7e799",
    },
    "workbench.tree.indent": 16,
    "workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
    "workbench.iconTheme": "material-icon-theme"
}
