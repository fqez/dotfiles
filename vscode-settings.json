{
    // Python related configuration
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.wordBasedSuggestions": "off",
        "editor.rulers": [
            88,
            120
        ],
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
            "source.organizeImports": "always",
            "source.unusedImports": "always",
        },
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "flake8.args": [
        "--max-line-length=120"
    ],
    // Java related configuration
    "[java]": {
        "editor.defaultFormatter": "redhat.java",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always",
        }
    },
    "code-runner.executorMap": {
        "python": "python -u $workspaceRoot/demo/main.py"
    },
    "editor.formatOnType": true,
    "notebook.formatOnSave.enabled": true,
    "isort.args": [
        "--profile",
        "black"
    ],
    "code-runner.runInTerminal": true,
    // editor related configuration
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "FiraCode Nerd Font",
    "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",
    "editor.fontVariations": "'wght' 350",
    "editor.formatOnPaste": true,
    "editor.formatOnSaveMode": "file",
    "editor.formatOnSave": true,
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    "editor.minimap.enabled": false,
    "editor.quickSuggestionsDelay": 0,
    "editor.snippetSuggestions": "top",
    "editor.suggestSelection": "first",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "storage,entity,variable",
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },
    // explorer configurations
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 1,
    // files configuration
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
    },
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    // copilot configuration
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": true,
        "python": true,
    },
    // search configuration
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.gitignore": true,
        "**/.pyc": true,
        "**/.svn": true,
        "**/CVS": true,
    },
    //security configuration
    "security.workspace.trust.untrustedFiles": "open",
    // terminal configuration
    "terminal.integrated.defaultProfile.windows": "Custom Init",
    "terminal.integrated.fontFamily": "FiraCode Nerd Font",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.profiles.windows": {
        "Custom Init": {
            "args": [
                "-noexit",
                "-file",
                "C:/Users/Francho/Documents/WindowsPowerShell/Microsoft.PowerShell_profile.ps1"
            ],
            "path": "pwsh.exe"
        }
    },
    "workbench.activityBar.location": "top",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#ab307e",
        "activityBar.background": "#ab307e",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#25320e",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#ab307e",
        "statusBar.background": "#832561",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#ab307e",
        "statusBarItem.remoteBackground": "#832561",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#832561",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#83256199",
        "titleBar.inactiveForeground": "#e7e7e799",
        "terminal.background": "#000000",
        "outputView.background": "#000000",
        "list.activeSelectionBackground": "#3276ff",
        "list.inactiveSelectionBackground": "#3276ff",
        "folderPathColor.custom1": "#FF4488",
        "folderPathColor.custom2": "#88ff44",
        "folderPathColor.custom3": "#4488FF",
        "folderPathColor.custom4": "#44ecff",
        "errorLens.errorBackground": "#9c0101",
        "errorLens.errorForeground": "#d4ff00",
        "errorLens.warningBackground": "#633f01",
        "errorLens.warningForeground": "#eeff00"
    },
    "workbench.tree.indent": 16,
    "workbench.colorTheme": "Monokai Pirokai - Beach Sunset",
    "workbench.iconTheme": "material-icon-theme",
    "files.associations": {
        "*.qss": "css"
    },
    "code-runner.clearPreviousOutput": true,
    "code-runner.fileDirectoryAsCwd": true,
    "code-runner.showExecutionMessage": false,
    "redhat.telemetry.enabled": true,
    "github.copilot.editor.enableAutoCompletions": true,
    "editor.fontSize": 14,
    "editor.detectIndentation": false,
    "thunder-client.sidebar.layout": "compact",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "folder-path-color.folders": [
        {
            "path": "src/main/java/com/mapfre/health/nmc/specialities",
            "symbol": "SR",
            "tooltip": "Source files",
            "color": "custom3"
        },
        {
            "path": "src/main/java/com/mapfre/health/nmc/subspecialities",
            "symbol": "T",
            "tooltip": "Common",
            "color": "custom2"
        },
        {
            "path": "src/main/java/com/mapfre/health/nmc/shared",
            "symbol": "T",
            "tooltip": "Common",
            "color": "custom4"
        }
    ]
}
